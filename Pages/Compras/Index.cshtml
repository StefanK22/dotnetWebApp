@page
@model Sales.Pages.Compras.ComprasModel
@{
}

<head>
    <style>
        .content-table {
            border-collapse: collapse;
            margin: 25px 0;
            font-size: 0.9em;
            width: 100%;
        }

        .content-table thead tr {
            background-color: #14a387;
            color: #FFFFFF;
            text-align: left;
            font-weight: bold;
            font-size: 18px;
        }

        .content-table th,
        .content-table td {
            padding: 12px 15px;
        }

        .content-table tbody tr {
            border-bottom: 1px solid #dddddd;
        }
        tr:hover {
            background-color: #e8e8e8;
        }
        .close-button {
            cursor: pointer;
            color: red;
            transform: translate(0%, -50%);
            text-decoration: none;
            font-size: 16px;
        }
        .close-button:hover {
            background: #bbb;
            color: black;
        }
        .btn-primary {
            background-color: #14a387;
            border: 1px solid white;
        }
        .btn-primary:hover {
            background-color: #0f7f69;
            border: 1px solid white;
        }
        .btn-default {
            cursor: pointer;
            color: blue;
            transform: translate(0%, -50%);
            text-decoration: none;
            font-size: 20px;
        }
        .btn-default:hover {
            background: #bbb;
            color: black;
        }

    </style>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const rows = document.querySelectorAll("tr[data-href]");

            rows.forEach((row) => {
                row.addEventListener("click", () => {
                    window.location.href = row.dataset.href;
                });
            });
        });
    </script>
</head>

<br>
<h2>Lista de Compras</h2>
<a class="btn btn-primary btn-sm" href="/Compras/Criar">Nova Compra</a>
<table class="content-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Produto</th>
            <th>Link</th>
            <th>Data da compra</th>
            <th>Data do Recebimento</th>
            <th>Pre√ßo</th>
            <th> </th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var compra in Model.comprasList)
        {
            <tr data-href="/Compras/Editar?id=@compra.Id">
                <td>@compra.Id</td>
                <td>@compra.NomeProduto</td>
                @if (compra.Link.Length >= 30)
                {
                    <td>@compra.Link.Substring(0, 30)</td>
                }
                else 
                {
                    <td>@compra.Link</td>
                }
                <td>@compra.DataCompra</td>
                @if (@compra.DataRecebimento.Equals(DateOnly.FromDateTime(DateTime.MinValue.AddDays(1))))
                {
                    <td> </td>
                } 
                else 
                {
                    <td>@compra.DataRecebimento</td>   
                }
                <td>@compra.Preco</td>
                <td>
                    <a class="btn-default" href="/Compras/Duplicar?id=@compra.Id">+</a>
                </td>
                <td>
                    <a class="close-button" href="/Compras/Remover?id=@compra.Id">X</a>
                </td>
            </tr>
        }
    </tbody>
</table>
