@page
@model Sales.Pages.Vendas.VendasModel
@{
}

<head>
    <style>
        .content-table {
            border-collapse: collapse;
            margin: 25px 0;
            font-size: 0.9em;
            width: 100%;
        }

        .content-table thead tr {
            background-color: #14a387;
            color: #FFFFFF;
            text-align: left;
            font-weight: bold;
            font-size: 18px;
        }

        .content-table th,
        .content-table td {
            padding: 12px 15px;
        }

        .content-table tbody tr {
            border-bottom: 1px solid #dddddd;
        }
        tr:hover {
            background-color: #e8e8e8;
        }
        .close-button {
            cursor: pointer;
            color: red;
            transform: translate(0%, -50%);
            text-decoration: none;
            font-size: 16px;
        }
        .close-button:hover {
            background: #bbb;
            color: black;
        }
        .btn-primary {
            background-color: #14a387;
            border: 1px solid white;
        }
        .btn-primary:hover {
            background-color: #0f7f69;
            border: 1px solid white;
        }

    </style>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const rows = document.querySelectorAll("tr[data-href]");

            rows.forEach((row) => {
                row.addEventListener("click", () => {
                    window.location.href = row.dataset.href;
                });
            });
        });
    </script>
</head>

<br>
<h2>Lista de Vendas</h2>
<a class="btn btn-primary btn-sm" href="/Vendas/Criar">Nova Venda</a><br></br>
<label for="vendasTotal">Total ganho em Vendas: </label>
<input type="text" size="8" style="text-align: center; background-color: #e8e8e8;" id="vendasTotal" name="vendasTotal" value="@Model.Total" disabled>
<table class="content-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Id da Compra</th>
            <th>Preço</th>
            <th>Data da Venda</th>
            <th>Cliente</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venda in Model.vendasList)
        {
            <tr data-href="/Vendas/Editar?id=@venda.Id">

                <td>@venda.Id</td>
                <td>@venda.CompraId</td>
                <td>@venda.Preco€</td>
                <td>@venda.Data</td>
                <td>@venda.NomeCliente</td>
                <td>
                    <a class="close-button" href="/Vendas/Remover?id=@venda.Id">X</a>
                </td>
            </tr>
        }
    </tbody>
</table>
